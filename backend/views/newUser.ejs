<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/newUser.css">
    <link rel="stylesheet" href="/css/footer.css">
    
</head>
<body>
    <!-- Cabecera -->
    <header>
        <div class="logo">
            <img src="/img/logo_Color_IES.png" alt="Logo">
        </div>
        <nav>
            <ul>
                <li><a href="/api/v1/home/main">Inicio</a></li>
                <li><a href="#">Acerca de</a></li>
                <li><a href="/api/v1/users/admin/userlist">Listado de Usuarios</a></li> 
                <li><a href="/api/v1/empresas/admin/companylist">Listado de Empresas</a></li>
                <li><a href="/api/v1/empresas/linkStudents">Vincular alumnos con empresas</a></li>
                <li><a id="contactoLink" href="/api/v1/home/contact">Contacto</a></li>
            </ul>
        </nav>
        <div class="user">
            <img id="userImage" src="#" alt="Usuario">
            <ul class="dropdown" id="userDropdown">
                <li><a href="#">Detalles</a></li>
                <li>
                    <form id="logoutForm" action="/api/v1/auth/logout" method="post">
                        <button type="submit" id="logoutButton">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main">
        <form action="/api/v1/users/admin/users" method="post" enctype="multipart/form-data"> <!-- Añadir enctype para manejar archivos -->
            <label for="username">Nombre de Usuario:</label>
            <input type="text" id="username" name="username" placeholder="Nombre de usuario..." required>

            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" placeholder="Contraseña..." required>

            <label for="firstName">Nombre:</label>
            <input type="text" id="firstName" name="firstName" placeholder="Nombre..." required>

            <label for="direccion">Dirección:</label>
            <input type="text" id="direccion" name="direccion"placeholder="Ciudad,Calle,Puerta." required>

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email"placeholder="Correo Electrónico..." required>

            <div class="avatar-container">
                <label for="avatarInput">
                    <img src="/img/avatar-default-symbolic.svg" alt="Avatar predeterminado" id="avatarImage">
                </label>
                <h3>(Imagen opcional)</h3>  
                <input type="file" name="picture" id="avatarInput" accept="image/*" style="display: none;"> <!-- Input oculto para seleccionar imagen -->
            </div>

            <label for="roles">Roles:</label>
            <select name="roles" id="">
                <option value="admin">ADMIN</option>
                <option value="profesor">PROFESOR</option>
                <option value="alumno" selected>ALUMNO</option>
            </select>

            <button type="submit">Crear Usuario</button>
        </form>
    </main>

    <!-- Pie de página -->
    <footer>
        <div class="footer-column">
            <ul>
                <li><a href="#">Legal Warning</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Cookies Policy</a></li>
                <li><a href="#">Quality Policy</a></li>
            </ul>
        </div>
        <div class="logo">
            <img src="/img/logo_Color_IES.png" alt="Logo">
        </div>
        <div class="footer-column">
            <ul>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Quienes Somos</a></li>
                <li><a href="#">Número de Teléfono</a></li>
                <li><a href="#">Ubicación: Calle Falsa 123, Ciudad Ficticia</a></li>
            </ul>
        </div>
    </footer>

    <script>
        // Script para mostrar la imagen seleccionada
        document.getElementById('avatarInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('avatarImage').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
    <script src="/js/getPhoto.js"></script>
    <script src="/js/getRole.js"></script>
</body>
</html>