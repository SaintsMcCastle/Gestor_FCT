<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Nueva Empresa</title>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/newUser.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <!-- Cabecera -->
    <header>
        <div class="logo">
            <img src="/img/logo_Color_IES.png" alt="Logo">
        </div>
        <nav>
            <ul>
                <li><a href="/api/v1/home/main">Inicio</a></li>
                <li><a href="#">Acerca de</a></li>
                <li><a href="/api/v1/users/admin/userlist">Listado de Usuarios</a></li>
                <li><a href="/api/v1/empresas/admin/companylist">Listado de Empresas</a></li>
                <li><a href="/api/v1/empresas/linkStudents">Vincular alumnos con empresas</a></li>
                <li><a id="contactoLink" href="/api/v1/home/contact">Contacto</a></li>
            </ul>
        </nav>
        <div class="user">
            <img id="userImage" src="#" alt="Usuario">
            <ul class="dropdown" id="userDropdown">
                <li><a href="#">Detalles</a></li>
                <li>
                    <form id="logoutForm" action="/api/v1/auth/logout" method="post">
                        <button type="submit" id="logoutButton">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main">
        <form action="/api/v1/empresas/admin/empresas" method="post">
            <label for="CIF">CIF:</label>
            <input type="text" id="CIF" name="CIF" placeholder="CIF de la empresa..." required readonly>

            <label for="name">Nombre de la Empresa:</label>
            <input type="text" id="name" name="name" placeholder="Nombre de la empresa..." required>

            <label for="city">Ciudad:</label>
            <input type="text" id="city" name="city" placeholder="Ciudad..." required>

            <label for="personInCharge">Persona a Cargo:</label>
            <input type="text" id="personInCharge" name="personInCharge" placeholder="Persona a cargo..." required>
            <br>
            <label for="personInChargeID">ID de la Persona a Cargo:</label>
            <input type="text" id="personInChargeID" name="personInChargeID" placeholder="ID de la persona a cargo..." required>

            <label for="type">Tipo:</label>
            <br>
            <select id="type" name="type" required>
                <option value="industrial">Industrial</option>
                <option value="servicios">Servicios</option>
                <option value="comercial">Comercial</option>
                <option value="tecnologica">Tecnológica</option>
                <option value="manufactura">Manufactura</option>
                <option value="alimentacion">Alimentación</option>
                <option value="textil">Textil</option>
                <option value="financiera">Financiera</option>
                <option value="educativa">Educativa</option>
                <option value="salud">Salud</option>
                <option value="turismo">Turismo</option>
                <option value="transporte">Transporte</option>
                <option value="energia">Energía</option>
                <option value="construccion">Construcción</option>
                <option value="logistica">Logística</option>
            </select>

            <label for="family">Familia:</label>
            <select id="family" name="family" required>
                <option value="Agricola">Agrícola</option>
                <option value="Informatica">Informática</option>
                <option value="Construccion">Construcción</option>
                <option value="Sanitaria">Sanitaria</option>
                <option value="Administracion">Administración</option>
                <option value="Comunicacion">Comunicación</option>
                <option value="Diseno">Diseño</option>
                <option value="Mecanica">Mecánica</option>
                <option value="Electronica">Electrónica</option>
                <option value="Marketing">Marketing</option>
                <option value="Finanzas">Finanzas</option>
                <option value="Derecho">Derecho</option>
                <option value="Arquitectura">Arquitectura</option>
                <option value="Biotecnologia">Biotecnología</option>
                <option value="Medioambiental">Medioambiental</option>
            </select>

            <label for="address">Dirección:</label>
            <input type="text" id="address" name="address" placeholder="Ciudad, Calle, Puerta..." required>

            <label for="area">Área:</label>
            <br>
            <select id="area" name="area" required>
                <option value="Publica">Pública</option>
                <option value="Privada">Privada</option>
                <option value="Mixta">Mixta</option>
            </select>

            <label for="postalCode">Código Postal:</label>
            <input type="number" id="postalCode" name="postalCode" placeholder="Código Postal..." required>

            <label for="phone">Teléfono:</label>
            <input type="tel" id="phone" name="phone" placeholder="Teléfono..." required>

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" placeholder="Correo Electrónico..." required>

            <button type="submit">Crear Empresa</button>
        </form>
    </main>

    <!-- Pie de página -->
    <footer>
        <div class="footer-column">
            <ul>
                <li><a href="#">Legal Warning</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Cookies Policy</a></li>
                <li><a href="#">Quality Policy</a></li>
            </ul>
        </div>
        <div class="logo">
            <img src="/img/logo_Color_IES.png" alt="Logo">
        </div>
        <div class="footer-column">
            <ul>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Quienes Somos</a></li>
                <li><a href="#">Número de Teléfono</a></li>
                <li><a href="#">Ubicación: Calle Falsa 123, Ciudad Ficticia</a></li>
            </ul>
        </div>
    </footer>

    <script>
        // Generar un CIF aleatorio
        function generateRandomCIF() {
            const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            const firstLetter = letters.charAt(Math.floor(Math.random() * letters.length));
            const numbers = Math.floor(Math.random() * 100000000).toString().padStart(8, '0');
            return firstLetter + numbers;
        }

        // Asignar el CIF generado al campo de entrada
        document.getElementById('CIF').value = generateRandomCIF();
    </script>
</body>
</html>
